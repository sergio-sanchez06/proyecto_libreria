<style>
    /* Control de la imagen del libro */
    .book-img-container {
        height: 300px;
        /* Altura fija para todas las portadas */
        overflow: hidden;
        background-color: #f8f9fa;
        /* Fondo gris claro por si la imagen es peque√±a */
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .book-img {
        width: 100%;
        height: 100%;
        object-fit: contain;
        /* 'contain' para ver la portada completa, 'cover' si prefieres que llene todo el espacio */
        padding: 10px;
        /* Un poco de aire para que no pegue a los bordes */
    }

    /* Mejora opcional: sombra al pasar el rat√≥n */
    .card-custom {
        transition: transform 0.2s;
    }

    .card-custom:hover {
        transform: scale(1.02);
    }
</style>

<%- include('../layout/header') %>

    <div class="container py-5">
        <div class="text-center mb-5">
            <h1 class="display-4 fw-bold">Nuestro Cat√°logo</h1>
            <p class="lead text-muted">Explora todos los t√≠tulos disponibles en nuestra librer√≠a</p>
        </div>

        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
            <% books.forEach(book=> { %>
                <div class="col">
                    <div class="card h-100 card-custom shadow-sm border-0">
                        <div class="book-img-container">
                            <img src="<%= book.cover_url || '/images/default-cover.jpg' %>"
                                class="card-img-top book-img" alt="<%= book.title %>">
                        </div>

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-truncate" title="<%= book.title %>">
                                <%= book.title %>
                            </h5>

                            <p class="precio mt-auto fw-bold text-primary fs-5 mb-0">
                                <%= book.price %>‚Ç¨
                            </p>

                            <div class="d-grid gap-2 mt-3">
                                <a href="/books/book/<%= book.id %>" class="btn btn-outline-primary btn-sm">
                                    Ver detalles
                                </a>

                                <form action="/cart/add" method="POST" class="w-100">
                                    <input type="hidden" name="book_id" value="<%= book.id %>">

                                    <div class="d-flex align-items-center gap-2">
                                        <div class="input-group input-group-sm" style="width: 80px;">
                                            <input type="number" name="quantity" value="1" min="1"
                                                max="<%= book.stock %>" class="form-control" <%=book.stock <=0
                                                ? 'disabled' : '' %>>
                                        </div>
                                        <button type="submit" class="btn btn-success btn-sm flex-grow-1" <%=book.stock
                                            <=0 ? 'disabled' : '' %>
                                            title="<%= book.stock <=0 ? 'Sin stock' : 'A√±adir al carrito' %>">
                                                A√±adir üõí
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <% }) %>
        </div>
    </div>

    <%- include('../layout/footer') %>