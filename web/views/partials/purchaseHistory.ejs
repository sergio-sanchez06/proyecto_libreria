<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mis Pedidos | Mi Librería</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <style>
        .order-card {
            border-left: 5px solid #0d6efd;
            transition: transform 0.2s;
        }

        .order-card:hover {
            transform: scale(1.01);
        }

        .status-badge {
            font-size: 0.8rem;
        }
    </style>
</head>

<%- include('../layout/header') %>

    <body class="bg-light">
        <div class="container my-5">
            <h2 class="mb-4"><i class="bi bi-bag-check-fill me-2"></i>Historial de Pedidos</h2>

            <% if (orders && orders.length> 0) { %>
                <% orders.forEach(order=> { %>
                    <div class="card mb-4 shadow-sm order-card">
                        <div class="card-header bg-white d-flex justify-content-between align-items-center py-3">
                            <div>
                                <span class="text-muted small">PEDIDO #<%= order.id %></span>
                                <h5 class="mb-0">Realizado el: <%= new Date(order.created_at).toLocaleDateString() %>
                                </h5>
                            </div>
                            <div class="text-end">
                                <span class="badge bg-primary rounded-pill status-badge mb-1">
                                    <%= order.status %>
                                </span>
                                <p class="h5 mb-0 text-success fw-bold">
                                    <%= order.total %>€
                                </p>
                            </div>
                        </div>

                        <div class="card-body">
                            <h6>Detalles del envío:</h6>
                            <p class="text-muted mb-3 small">Enviado a: <%= user.email %>
                            </p>

                            <div class="table-responsive">
                                <table class="table table-sm align-middle">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Libro</th>
                                            <th class="text-center">Cantidad</th>
                                            <th class="text-end">Precio Unit.</th>
                                            <th class="text-end">Subtotal</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if (order.items && order.items.length> 0) { %>
                                            <% order.items.forEach(item=> { %>
                                                <tr>
                                                    <td>
                                                        <strong>
                                                            <%= item.book.title || 'Libro: ' + item.book.title %>
                                                        </strong>
                                                    </td>
                                                    <td class="text-center">x<%= item.quantity %>
                                                    </td>
                                                    <td class="text-end">
                                                        <%= item.price_at_time %>€
                                                    </td>
                                                    <td class="text-end fw-bold">
                                                        <%= (item.quantity * item.price_at_time).toFixed(2) %>€
                                                    </td>
                                                </tr>
                                                <% }) %>
                                                    <% } else { %>
                                                        <tr>
                                                            <td colspan="4" class="text-center text-muted italic">
                                                                Cargando detalles...</td>
                                                        </tr>
                                                        <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <% }) %>
                        <% } else { %>
                            <div class="text-center py-5">
                                <i class="bi bi-cart-x text-muted" style="font-size: 4rem;"></i>
                                <h4 class="mt-3">Aún no has realizado ningún pedido</h4>
                                <a href="/books" class="btn btn-primary mt-3">Ir a la tienda</a>
                            </div>
                            <% } %>
        </div>

        <%- include('../layout/footer') %>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    </body>

</html>