<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= author.name %> - Autor
    </title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/author_detail.css">

</head>

<body>

    <%- include('../layout/header') %>

        <div class="container py-5">
            <!-- Cabecera del autor -->
            <div class="author-header">
                <img src="<%= author.photo_url || '/images/default-author.jpg' %>" alt="<%= author.name %>">
                <h1>
                    <%= author.name %>
                </h1>
                <% if (author.country) { %>
                    <p class="lead">
                        <%= author.country %>
                    </p>
                    <% } %>

            </div>

            <!-- Información adicional (opcional) -->
            <div class="author-info">
                <h2 class="text-center">Biografía</h2>
                <% if (author.biography) { %>
                    <p>
                        <%= author.biography %>
                    </p>
                    <% } else { %>
                        <p class="text-muted">No hay biografía disponible.</p>
                        <% } %>
            </div>

            <!-- Libros del autor -->
            <section class="books-section">
                <h2 class="text-center">Libros de <%= author.name %>
                </h2>

                <% if (books && books.length> 0) { %>
                    <div class="row justify-content-center">
                        <% books.forEach(book=> { %>
                            <div class="col-md-3 mb-4">
                                <div class="card h-100 shadow-sm book-card">
                                    <img src="<%= book.cover_url || '/images/default-cover.jpg' %>" class="card-img-top"
                                        alt="<%= book.title %>">
                                    <div class="card-body d-flex flex-column">
                                        <h5 class="card-title text-truncate">
                                            <%= book.title %>
                                        </h5>
                                        <p class="card-text text-muted small">Año: <%= book.releashed_year
                                                || "Desconocido" %>
                                        </p>
                                        <p class="card-text fw-bold text-primary mt-auto">
                                            <%= book.price %>€
                                        </p>
                                        <a href="/books/book/<%= book.id %>" class="btn btn-primary btn-sm mt-2">Ver
                                            detalles</a>
                                    </div>
                                </div>
                            </div>
                            <% }) %>
                    </div>
                    <% } else { %>
                        <p class="text-center text-muted">Este autor no tiene libros registrados aún.</p>
                        <% } %>
            </section>

            <% if(user && user.role==="ADMIN" ) { %>

                <div class="back-link">
                    <a href="/authors/author/edit/<%= author.id %>">Editar autor</a>
                </div>

                <div class="back-link">
                    <form action="/authors/author/delete/<%= author.id %>" method="POST">
                        <input type="hidden" name="id" value="<%= author.id %>">
                        <button type="submit" class="btn btn-danger">Eliminar autor</button>
                    </form>
                </div>

                <% } else { %>

                    <!-- Volver al inicio -->
                    <div class="back-link">
                        <a href="/">← Volver al inicio</a>
                    </div>
                    <% } %>
        </div>

        <!-- Bootstrap JS -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

<%- include('../layout/footer') %>

</html>