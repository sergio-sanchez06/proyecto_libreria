<%- include('../layout/header') %>

    <div class="container py-5">
        <div class="text-center mb-5">
            <h2 class="fw-bold text-primary">Nuestras Editoriales</h2>
            <p class="text-muted">Encuentra libros por su sello editorial</p>
        </div>

        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
            <% publishers.forEach(pub=> { %>
                <div class="col">
                    <div class="card h-100 shadow-sm border-0 text-center p-4 card-custom">
                        <div class="card-body d-flex flex-column">
                            <div class="rounded-circle bg-secondary bg-opacity-10 d-flex align-items-center justify-content-center mx-auto mb-3"
                                style="width: 70px; height: 70px;">
                                <img src="<%= pub.image_url %>" alt="Logo de <%= pub.name %>" class="img-fluid mb-3">
                            </div>


                            <h5 class="card-title fw-bold mb-3">
                                <%= pub.name %>
                            </h5>

                            <a href="/publisher/<%= pub.id %>"
                                class="btn btn-outline-secondary btn-sm w-100 rounded-pill mt-auto">
                                Ver cat√°logo editorial
                            </a>
                        </div>
                    </div>
                </div>
                <% }) %>
        </div>
    </div>

    <%- include('../layout/footer') %>