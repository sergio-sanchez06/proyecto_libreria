<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>

    <%- include('../layout/header.ejs') %>

        <main class="container py-5">
            <h1 class="section-title">Tu carrito</h1>

            <% if (error) { %>
                <div class="alert alert-danger shadow-sm border-0 mb-4">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    <%= error %>
                </div>
                <% } %>

                    <% if (cart.length===0) { %>
                        <div class="text-center py-5 shadow-sm bg-white rounded">
                            <p class="lead text-muted">El carrito está vacío</p>
                            <a href="/" class="btn btn-primary px-4">Volver a la tienda</a>
                        </div>
                        <% } else { %>
                            <div class="row">
                                <% cart.forEach(item=> { %>
                                    <div class="col-md-6 mb-4">
                                        <div class="card h-100 shadow-sm border-0 book-card-cart">
                                            <div class="row g-0 h-100">
                                                <div class="col-4">
                                                    <img src="<%= item.book.cover_url || '/images/default-cover.jpg' %>"
                                                        class="img-fluid rounded-start h-100"
                                                        alt="<%= item.book.title %>"
                                                        style="object-fit: cover; min-height: 150px;">
                                                </div>
                                                <div class="col-8">
                                                    <div class="card-body d-flex flex-column h-100">
                                                        <h5 class="card-title text-truncate">
                                                            <%= item.book.title %>
                                                        </h5>
                                                        <p class="text-primary fw-bold mb-1">Precio: <%= item.book.price
                                                                %>€
                                                        </p>

                                                        <div class="d-flex align-items-center my-2">
                                                            <span class="me-2 small">Cantidad:</span>
                                                            <div
                                                                class="qty-controls d-flex align-items-center bg-light rounded">
                                                                <form action="/cart/add" method="POST" class="m-0">
                                                                    <input type="hidden" name="book_id"
                                                                        value="<%= item.book_id %>">
                                                                    <input type="hidden" name="quantity" value="-1">
                                                                    <button type="submit"
                                                                        class="btn btn-sm btn-qty">-</button>
                                                                </form>

                                                                <span class="px-3 fw-bold">
                                                                    <%= item.quantity %>
                                                                </span>

                                                                <form action="/cart/add" method="POST" class="m-0">
                                                                    <input type="hidden" name="book_id"
                                                                        value="<%= item.book_id %>">
                                                                    <input type="hidden" name="quantity" value="1">
                                                                    <button type="submit" class="btn btn-sm btn-qty"
                                                                        <%=item.quantity>= item.book.stock ? 'disabled'
                                                                        : ''
                                                                        %>>+</button>
                                                                </form>
                                                            </div>
                                                        </div>

                                                        <p class="card-text fw-bold mt-auto mb-2">
                                                            Subtotal: <span class="text-dark">
                                                                <%= (item.book.price * item.quantity).toFixed(2) %>€
                                                            </span>
                                                        </p>

                                                        <form action="/cart/add" method="POST" class="mt-2">
                                                            <input type="hidden" name="book_id"
                                                                value="<%= item.book_id %>">
                                                            <input type="hidden" name="quantity"
                                                                value="-<%= item.quantity %>">
                                                            <button type="submit"
                                                                class="btn btn-link btn-sm p-0 text-danger text-decoration-none">
                                                                Eliminar del carrito
                                                            </button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <% }) %>
                            </div>

                            <div class="d-flex flex-column align-items-end mt-4 p-4 bg-white shadow-sm rounded">
                                <h3 class="fw-bold mb-3">Total: <span class="text-primary">
                                        <%= total %>€
                                    </span></h3>

                                <form action="/cart/checkout" method="POST" id="checkout-form"
                                    class="w-100 w-md-auto text-end">
                                    <input type="hidden" name="firebase_token" id="firebase-token">
                                    <button type="submit" id="checkout-btn"
                                        class="btn btn-success btn-lg px-5 shadow-sm" disabled>
                                        Cargando autenticación...
                                    </button>
                                </form>
                            </div>

                            <script type="module">
                                import { initCheckout } from '/js/auth.mjs';
                                if (document.readyState === 'loading') {
                                    document.addEventListener('DOMContentLoaded', initCheckout);
                                } else {
                                    initCheckout();
                                }
                            </script>
                            <% } %>
        </main>

</body>

<%- include('../layout/footer') %>

</html>