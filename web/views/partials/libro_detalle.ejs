<!-- web/views/partials/book-details.ejs -->
<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= book.title || "Libro" %> - Detalles
    </title>
    <link rel="stylesheet" href="/css/libro_detalle.css">
</head>

<body>

    <%- include("../layout/header") %>
        <div class="container">
            <h1>
                <%= book.title || "Sin t√≠tulo" %>
            </h1>

            <div class="book-details-wrapper">
                <div class="book-cover-column">
                    <img src="<%= book.cover_url || '/images/default-cover.jpg' %>" alt="<%= book.title %>">
                </div>

                <div class="book-info-column">
                    <p><strong>Autor:</strong>
                        <% authors.forEach(author=> { %>
                            <a href="/author/<%= author.id %>" class="text-decoration-none">
                                <%= author.name %>
                            </a>
                            <% }) %>
                    </p>

                    <p><strong>Sinopsis:</strong>
                        <%= book.synopsis || "No disponible" %>
                    </p>

                    <p><strong>ISBN:</strong>
                        <%= book.isbn %>
                    </p>
                    <p><strong>Editorial:</strong> <a href="/publisher/<%= publisher.id %>">
                            <%= publisher.name %>
                        </a></p>
                    <p><strong>Lanzamiento:</strong>
                        <%= book.releashed_year %>
                    </p>

                    <p><strong>G√©neros:</strong>
                    <div class="d-flex flex-wrap gap-2 mb-3">
                        <% genres.forEach(genre=> { %>
                            <span class="badge bg-primary fs-6 px-3 py-2">
                                <%= genre.genre.name %>
                                    <a href="/genres/<%= genre.genre.name %>">Ver</a>
                            </span>
                            <% }) %>
                    </div>
                    </p>

                    <h3 class="text-success mb-3">
                        <%= book.price %>‚Ç¨
                    </h3>

                    <div class="cart-section">
                        <form action="/cart/add" method="POST" class="row g-3 align-items-center">
                            <input type="hidden" name="book_id" value="<%= book.id %>">
                            <div class="col-auto">
                                <label class="form-label mb-0">Cantidad:</label>
                                <input type="number" name="quantity" value="1" min="1" max="<%= book.stock %>"
                                    class="form-control" style="width: 80px;">
                            </div>
                            <div class="col-auto mt-4">
                                <button type="submit" class="btn btn-success" <%=book.stock <=0 ? 'disabled' : '' %>>
                                    A√±adir al carrito üõí
                                </button>
                            </div>
                        </form>
                    </div>

                    <% if(user && user.role==="ADMIN" ) { %>
                        <div class="admin-controls">
                            <a href="/admin/books/update/<%= book.id %>" class="btn btn-warning">Editar Libro</a>
                            <form action="/admin/books/delete/<%= book.id %>" method="POST"
                                onsubmit="return confirm('¬øSeguro?')">
                                <input type="hidden" name="id" value="<%= book.id %>">
                                <button type="submit" class="btn btn-danger">Eliminar</button>
                            </form>
                        </div>
                        <% } %>

                            <a href="/" class="back-link-nav">‚Üê Volver al inicio</a>
                </div>
            </div>
        </div>

        <%- include('../layout/footer') %>
</body>

</html>