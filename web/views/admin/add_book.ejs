<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>



    <link rel="stylesheet" href="/css/add_book.css">

    <%- include('../layout/header') %>

        <main class="container py-5">
            <div class="row justify-content-center">
                <div class="col-md-10 col-lg-8">
                    <div class="card shadow-sm">
                        <div class="card-header text-white" style="background-color: #006d33;">
                            <h2 class="mb-0">Crear Nuevo Libro</h2>
                        </div>
                        <div class="card-body">
                            <% if (error) { %>
                                <div class="alert alert-danger">
                                    <%= error %>
                                </div>
                                <% } %>

                                    <form action="/admin/books/create" method="POST" enctype="multipart/form-data">
                                        <div class="row">
                                            <div class="col-md-8 mb-3">
                                                <label for="title" class="form-label">Título *</label>
                                                <input type="text" name="title" id="title" class="form-control"
                                                    required>
                                            </div>

                                            <div class="col-md-4 mb-3">
                                                <label for="isbn" class="form-label">ISBN</label>
                                                <input type="text" name="isbn" id="isbn" class="form-control">
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-md-3 mb-3">
                                                <label for="price" class="form-label">Precio (€) *</label>
                                                <input type="number" step="0.01" name="price" id="price"
                                                    class="form-control" required>
                                            </div>

                                            <div class="col-md-3 mb-3">
                                                <label for="stock" class="form-label">Stock *</label>
                                                <input type="number" name="stock" id="stock" class="form-control"
                                                    min="0" required>
                                            </div>

                                            <div class="col-md-3 mb-3">
                                                <label for="released_year" class="form-label">Año de publicación</label>
                                                <input type="number" name="releashed_year" id="releashed_year"
                                                    class="form-control" min="1000" max="2100">
                                            </div>

                                            <div class="col-md-3 mb-3">
                                                <label for="pages" class="form-label">Páginas</label>
                                                <input type="number" name="pages" id="pages" class="form-control"
                                                    min="1">
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-md-4 mb-3">
                                                <label for="format" class="form-label">Formato</label>
                                                <select name="format" id="format" class="form-select">
                                                    <option value="">Selecciona formato</option>
                                                    <option value="Paperback">Paperback</option>
                                                    <option value="Hardcover">Hardcover</option>
                                                    <option value="Ebook">Ebook</option>
                                                    <option value="Audiobook">Audiobook</option>
                                                </select>
                                            </div>

                                            <div class="col-md-4 mb-3">
                                                <label for="language" class="form-label">Idioma</label>
                                                <input type="text" name="language" id="language" class="form-control"
                                                    value="Español">
                                            </div>

                                            <div class="col-md-4 mb-3">
                                                <label for="publisher_id" class="form-label">Editorial *</label>
                                                <select name="publisher_id" id="publisher_id" class="form-select"
                                                    required>
                                                    <option value="">Selecciona editorial</option>
                                                    <% publishers.forEach(publisher=> { %>
                                                        <option value="<%= publisher.id %>">
                                                            <%= publisher.name %>
                                                        </option>
                                                        <% }) %>
                                                </select>
                                            </div>
                                        </div>

                                        <div class="mb-3">
                                            <label for="synopsis" class="form-label">Sinopsis</label>
                                            <textarea name="synopsis" id="synopsis" rows="6"
                                                class="form-control"></textarea>
                                        </div>

                                        <!-- Autores (multiple) -->
                                        <div class="mb-3">
                                            <label for="author_ids" class="form-label">Autores</label>
                                            <select name="author_ids[]" id="author_ids" class="form-select" multiple
                                                size="6">
                                                <% authors.forEach(author=> { %>
                                                    <option value="<%= author.id %>">
                                                        <%= author.name %>
                                                    </option>
                                                    <% }) %>
                                            </select>
                                            <small class="form-text text-muted">Mantén Ctrl (o Cmd) para seleccionar
                                                varios.</small>
                                        </div>

                                        <!-- Géneros (multiple) -->
                                        <div class="mb-3">
                                            <label for="genre_ids" class="form-label">Géneros</label>
                                            <select name="genre_ids[]" id="genre_ids" class="form-select" multiple
                                                size="6">
                                                <% genres.forEach(genre=> { %>
                                                    <option value="<%= genre.id %>">
                                                        <%= genre.name %>
                                                    </option>
                                                    <% }) %>
                                            </select>
                                            <small class="form-text text-muted">Mantén Ctrl (o Cmd) para seleccionar
                                                varios.</small>
                                        </div>

                                        <!-- Portada -->
                                        <div class="mb-3">
                                            <label for="cover" class="form-label">Portada</label>
                                            <input type="file" name="cover" id="cover" class="form-control"
                                                accept="image/*">
                                            <small class="form-text text-muted">Selecciona una imagen para la portada
                                                (opcional).</small>
                                        </div>

                                        <div class="text-center">
                                            <button type="submit" class="btn me-2"
                                                style="background-color: #006d33; color: white">Crear
                                                libro</button>
                                            <a href="/admin/dashboard" class="btn btn-secondary btn-lg">Cancelar</a>
                                        </div>
                                    </form>
                        </div>
                    </div>
                </div>
            </div>
        </main>

        <%- include('../layout/footer') %>

</body>

</html>