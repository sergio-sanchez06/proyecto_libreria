<main class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white text-center">
                    <h2 class="mb-0">Editar Editorial - <%= publisher.name %>
                    </h2>
                </div>
                <div class="card-body">
                    <% if (error) { %>
                        <div class="alert alert-danger">
                            <%= error %>
                        </div>
                        <% } %>

                            <!-- Logo actual -->
                            <div class="text-center mb-4">
                                <img src="<%= publisher.logo_url || '/images/default-publisher.jpg' %>"
                                    alt="Logo actual" class="img-fluid rounded"
                                    style="max-height: 200px; object-fit: contain;">
                                <p class="text-muted mt-2">Logo actual</p>
                            </div>

                            <form action="/publisher/update/<%= publisher.id %>" method="POST"
                                enctype="multipart/form-data">
                                <div class="mb-3">
                                    <label for="name" class="form-label">Nombre *</label>
                                    <input type="text" name="name" id="name" value="<%= publisher.name %>"
                                        class="form-control" required>
                                </div>

                                <div class="mb-3">
                                    <label for="country" class="form-label">Pa√≠s</label>
                                    <input type="text" name="country" id="country" value="<%= publisher.country %>"
                                        class="form-control">
                                </div>

                                <div class="mb-3">
                                    <label for="website" class="form-label">Sitio web</label>
                                    <input type="url" name="website" id="website" value="<%= publisher.website %>"
                                        class="form-control" placeholder="https://ejemplo.com">
                                </div>

                                <div class="mb-3">
                                    <label for="publisher_logo" class="form-label">Nuevo logo</label>
                                    <input type="file" name="publisher_logo" id="publisher_logo" class="form-control"
                                        accept="image/*">
                                    <small class="form-text text-muted">Selecciona un nuevo logo (opcional).</small>
                                </div>

                                <div class="text-center">
                                    <button type="submit" class="btn btn-success me-2">Guardar cambios</button>
                                    <a href="/publisher/<%= publisher.id %>" class="btn btn-secondary">Cancelar</a>
                                </div>
                            </form>
                </div>
            </div>
        </div>
    </div>
</main>