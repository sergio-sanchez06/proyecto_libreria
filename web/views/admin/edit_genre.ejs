<%- include("../layout/header") %>

    <main class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card shadow-sm">
                    <div class="card-header bg-success text-white text-center">
                        <h2 class="mb-0">Editar Género: <%= genre.name %>
                        </h2>
                    </div>

                    <div class="card-body p-4">
                        <% if (error) { %>
                            <div class="alert alert-danger">
                                <%= error %>
                            </div>
                            <% } %>

                                <form action="/genres/update/<%= genre.id %>" method="POST">

                                    <div class="mb-4">
                                        <label for="name" class="form-label">Nombre del Género *</label>
                                        <input type="text" name="name" id="name" value="<%= genre.name %>"
                                            class="form-control" placeholder="Ej. Ciencia Ficción, Novela Negra..."
                                            required>
                                        <small class="text-muted">El nombre debe ser único en la base de datos.</small>
                                        <input type="hidden" name="id" value="<%= genre.id %>">
                                    </div>

                                    <div class="text-center mt-4">
                                        <button type="submit" class="btn btn-success btn-lg me-2">
                                            Guardar cambios
                                        </button>
                                        <a href="/genres/<%= genre.name %>" class="btn btn-secondary btn-lg">
                                            Cancelar
                                        </a>
                                    </div>
                                </form>
                    </div>
                </div>
            </div>
        </div>
    </main>