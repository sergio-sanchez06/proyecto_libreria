<main class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white text-center">
                    <h2 class="mb-0">Añadir Nuevo Género</h2>
                </div>
                <div class="card-body">
                    <% if (error) { %>
                        <div class="alert alert-danger">
                            <%= error %>
                        </div>
                        <% } %>

                            <form action="/genres/create" method="POST">
                                <div class="mb-3">
                                    <label for="name" class="form-label">Nombre del género *</label>
                                    <input type="text" name="name" id="name" class="form-control" required>
                                </div>

                                <div class="text-center">
                                    <button type="submit" class="btn btn-success me-2">Crear género</button>
                                    <a href="/genres" class="btn btn-secondary">Cancelar</a>
                                </div>
                            </form>
                </div>
            </div>
        </div>
    </div>
</main>