<main class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white text-center">
                    <h2 class="mb-0">Crear Nuevo Libro</h2>
                </div>
                <div class="card-body">
                    <% if (error) { %>
                        <div class="alert alert-danger">
                            <%= error %>
                        </div>
                        <% } %>

                            <form action="/books/create" method="POST" enctype="multipart/form-data">
                                <div class="mb-3">
                                    <label for="title" class="form-label">Título *</label>
                                    <input type="text" name="title" id="title" class="form-control" required>
                                </div>

                                <div class="mb-3">
                                    <label for="isbn" class="form-label">ISBN</label>
                                    <input type="text" name="isbn" id="isbn" class="form-control">
                                </div>

                                <div class="mb-3">
                                    <label for="price" class="form-label">Precio (€) *</label>
                                    <input type="number" step="0.01" name="price" id="price" class="form-control"
                                        required>
                                </div>

                                <div class="mb-3">
                                    <label for="released_year" class="form-label">Año de publicación</label>
                                    <input type="number" name="released_year" id="released_year" class="form-control">
                                </div>

                                <div class="mb-3">
                                    <label for="synopsis" class="form-label">Sinopsis</label>
                                    <textarea name="synopsis" id="synopsis" rows="5" class="form-control"></textarea>
                                </div>

                                <!-- Select para Editorial -->
                                <div class="mb-3">
                                    <label for="publisher_id" class="form-label">Editorial *</label>
                                    <select name="publisher_id" id="publisher_id" class="form-select" required>
                                        <option value="">Selecciona una editorial</option>
                                        <% publishers.forEach(publisher=> { %>
                                            <option value="<%= publisher.id %>">
                                                <%= publisher.name %>
                                            </option>
                                            <% }) %>
                                    </select>
                                </div>

                                <!-- Select multiple para Autores -->
                                <div class="mb-3">
                                    <label for="author_ids" class="form-label">Autores</label>
                                    <select name="author_ids[]" id="author_ids" class="form-select" multiple size="5">
                                        <% authors.forEach(author=> { %>
                                            <option value="<%= author.id %>">
                                                <%= author.name %>
                                            </option>
                                            <% }) %>
                                    </select>
                                    <small class="form-text text-muted">Mantén Ctrl (o Cmd) para seleccionar
                                        varios.</small>
                                </div>

                                <!-- Select multiple para Géneros -->
                                <div class="mb-3">
                                    <label for="genre_ids" class="form-label">Géneros</label>
                                    <select name="genre_ids[]" id="genre_ids" class="form-select" multiple size="5">
                                        <% genres.forEach(genre=> { %>
                                            <option value="<%= genre.id %>">
                                                <%= genre.name %>
                                            </option>
                                            <% }) %>
                                    </select>
                                    <small class="form-text text-muted">Mantén Ctrl (o Cmd) para seleccionar
                                        varios.</small>
                                </div>

                                <!-- Portada -->
                                <div class="mb-3">
                                    <label for="cover" class="form-label">Portada</label>
                                    <input type="file" name="cover" id="cover" class="form-control" accept="image/*">
                                    <small class="form-text text-muted">Selecciona una imagen para la portada
                                        (opcional).</small>
                                </div>

                                <div class="text-center">
                                    <button type="submit" class="btn btn-success me-2">Crear libro</button>
                                    <a href="/" class="btn btn-secondary">Cancelar</a>
                                </div>
                            </form>
                </div>
            </div>
        </div>
    </div>
</main>