<html>

<head>
    <title>Editorial</title>
    <link rel="stylesheet" href="../../public/css/styles.css">
</head>

<body>
    <div class="container">
        <h1>Editorial</h1>
        <form action="/editorial" method="post">
            <label for="nombre">Nombre:</label>
            <input type="text" id="nombre" name="nombre" required>
            <button type="submit">Guardar</button>
        </form>
    </div>
    <footer>
        <p>&copy; 2025 Libreria</p>
    </footer>
    <header>
        <h1>Administrador de librerias</h1>
        <nav>
            <ul>
                <li><a href="/libros">Libros</a></li>
                <li><a href="/usuarios">Usuarios</a></li>
                <li><a href="/autores">Autores</a></li>
                <li><a href="/libreria_admin">Inicio</a></li>
                <li><a href="/editoriales">Editoriales</a></li>
            </ul>
        </nav>
    </header>
    <main>
        <section>
            <h2>Editoriales</h2>
            <ul>
                <% editoriales.forEach(editorial=> { %>
                    <li>
                        <%= editorial.nombre %>
                    </li>
                    <% }) %>
            </ul>
        </section>
        <section>
            <h2>Editar Editoriales</h2>
            <form action="/editoriales/editar" method="post">
                <label for="id">ID:</label>
                <input type="number" id="id" name="id" required>
                <button type="submit">Editar</button>
            </form>
            <form action="/editoriales/eliminar" method="post">
                <label for="id">ID:</label>
                <input type="number" id="id" name="id" required>
                <button type="submit">Eliminar</button>
            </form>
            <form action="/editoriales/crear" method="post">
                <label for="nombre">Nombre:</label>
                <input type="text" id="nombre" name="nombre" required>
                <button type="submit">Crear</button>
            </form>
        </section>
    </main>
</body>

</html>