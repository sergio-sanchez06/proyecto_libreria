<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }

        img {

            max-width: 200px;

        }
    </style>
</head>

<%- include('layout/header') %>

    <body>
        <div class="container">
            <h1>Libros de <%= bookGenre[0].genre.name %>
            </h1>

            <% bookGenre.forEach(bookGenre=> { %>
                <p class="lead">
                    <%= bookGenre.book.title %>
                </p>
                <p class="lead">
                    <%= bookGenre.genre.name %>
                </p>
                <p>
                    <img src="<%= bookGenre.book.cover_url %>" alt="">
                </p>
                <p>
                    <%= bookGenre.book.synopsis %>
                </p>
                <p> <a href="/book/<%= bookGenre.book.id %>" target="_blank">Ver m√°s</a></p>
                <% }) %>

        </div>

        <% if(user && user.role==="ADMIN" ){ %>
            <p> <a href="/genres/edit/<%= bookGenre[0].genre.name %>" target="_blank">Editar</a></p>
            <p> <a href="/genres/delete/<%= bookGenre[0].genre.name %>" target="_blank">Borrar</a></p>
            <% } %>

                <p><a href="/genres">Volver</a></p>

                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    </body>

    <%- include('layout/footer') %>

</html>