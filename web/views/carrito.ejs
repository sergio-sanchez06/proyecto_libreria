<%- include('layout/header.ejs') %>

<div class="container container-carrito">
  <h2>Tu Cesta</h2>

  <div class="carrito-grid">
    <section class="items-carrito">
      <table class="tabla-carrito">
        <thead>
          <tr>
            <th>Producto</th>
            <th>Cantidad</th>
            <th>Precio</th>
            <th>Total</th>
            <th></th>
          </tr>
        </thead>
        <tbody id="lista-carrito">
          <!-- Se llena vía JS -->
          <tr>
            <td colspan="5" style="text-align: center; padding: 2rem">
              Tu carrito está vacío (Lógica JS pendiente)
            </td>
          </tr>
        </tbody>
      </table>
    </section>

    <section class="resumen-pedido">
      <h3>Resumen</h3>
      <div class="resumen-body">
        <div class="fila-resumen">
          <span>Subtotal:</span>
          <span id="subtotal">0.00€</span>
        </div>
        <div class="fila-resumen">
          <span>Envío:</span>
          <span>Gratis</span>
        </div>
        <hr />
        <div class="fila-resumen total">
          <span>Total:</span>
          <span id="total">0.00€</span>
        </div>
        <button class="btn btn-primary btn-block">Finalizar Compra</button>
      </div>
    </section>
  </div>
</div>

